@using Microsoft.AspNetCore.Identity
@model CreateUserVM
@{
    ViewData["Title"] = "CreateUser";
}

<h1 >Create User</h1>
@if (ViewBag.msg != null)
{
    <p style="color:green">ViewBag.msg</p>
}

@if (ViewBag.errorlist != null)
{
    <ul>
        @foreach (var item in (IEnumerable<IdentityError>)ViewBag.errorlist)
        {
            <li>@item.Description</li>
        }
    </ul>
}

    <form asp-action="CreateUser" method="post">
        <div class="row">
            <div class="col-4">
               <div><label asp-for="UserName"></label></div> 
               <div><input asp-for="UserName" /></div> 
            </div>
            </div>
        <div class="row">
            <div class="col-4">
                <div><label asp-for="Email"></label></div>
                <div>
                <input asp-for="Email" /></div>
            </div>
            </div>
        <div class="row">
    
            <div class="col-4">
                <div><label asp-for="Password"></label></div>
                <div><input asp-for="Password" /></div>
            </div>
            </div>
        <div class="row">
            <div class="col-4">
                <div> <label asp-for="ConfirmPassword"></label></div>
              <div><input asp-for="ConfirmPassword" /></div>  
                </div>
            </div>
          
                <div class="col=4">
                    <div>Admin<input type="checkbox" name="Admin" value="Admin"> </div>
                    <div><input type="submit" value="Create" /></div>
                </div>
          
    </form>